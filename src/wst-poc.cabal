    SmartTokens.Types.PTokenDirectory
    Wst.Cli
    Wst.Offchain
    Wst.Onchain
    Wst.Server
    Profile
    Types.Classes
    Types.Constants

  -- Compile

  build-depends:
    , aeson
    , base
    , base16-bytestring
    , bytestring
    , cardano-binary
    , plutarch-onchain-lib
    , data-default
    , generics-sop
    , plutarch
    , plutarch-extra
    , plutarch-ledger-api
    , plutus-core
    , plutus-ledger-api
    , plutus-tx
    , serialise
    , text

  hs-source-dirs:     lib

